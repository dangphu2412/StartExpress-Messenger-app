extends ../../layouts/sign

block content
  #login-phone-step1  
    h5 Sign in

    form#login-phone-number

      .form-group.input-group-lg
        input.form-control(type='text' name='phoneNumber' placeholder='Phone number' required='' autofocus='')
      #recaptcha-container
      .hidden(style='color:red')#alertauthenLogin Your phone number has not created yet !
      .form-group.d-flex.justify-content-between
        .custom-control.custom-checkbox
          input#customCheck1.custom-control-input(type='checkbox' checked='')
          label.custom-control-label(for='customCheck1') Remember me
        a(href='/reset-password') Reset password
      button.btn.btn-primary.btn-lg.btn-block(type='submit') Sign in
      hr

  #login-phone-step2.hidden
    form#login-number-verify(method='POST')
      .form-group.input-group-lg
        input.form-control(type='text' name='code' placeholder='Code' required='' autofocus='')
        .hidden(style='color:red')#alertverifyLogin Your code is wrong !
      button.btn.btn-primary.btn-lg.btn-block(type='submit') Verify
  div  
    p.text-muted Login with your social media account.
    ul.list-inline
      li.list-inline-item
        a.btn.btn-floating.btn-facebook(href='#')
          i.fa.fa-facebook
      li.list-inline-item
        a.btn.btn-floating.btn-twitter(href='#')
          i.fa.fa-twitter
      li.list-inline-item
        a.btn.btn-floating.btn-dribbble(href='#')
          i.fa.fa-dribbble
      li.list-inline-item
        a.btn.btn-floating.btn-linkedin(href='#')
          i.fa.fa-linkedin
      li.list-inline-item
        a.btn.btn-floating.btn-google(href='#')
          i.fa.fa-google
      li.list-inline-item
        a.btn.btn-floating.btn-behance(href='#')
          i.fa.fa-behance
      li.list-inline-item
        a.btn.btn-floating.btn-instagram(href='#')
          i.fa.fa-instagram
    hr
    p.text-muted Don&apos;t have an account?
    a.btn.btn-outline-light.btn-sm(href='/register') Register now!