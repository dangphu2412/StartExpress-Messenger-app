#addFriends.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog.modal-dialog-centered.modal-dialog-zoom(role='document')
      .modal-content
        .modal-header
          h5.modal-title
            i.ti-user
            |  Add Friends
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            i.ti-close
        .modal-body
          .alert.alert-info Send invitations to friends.
          form#addFriend
            .form-group
              label.col-form-label(for='email') Email addresses
              input#emailAddFriend.form-control(type='email' name='email')
            .form-group
              label.col-form-label(for='message') Invitation message
              textarea#messageAddFriend.form-control
            #success.hidden.pb-3(style="color:red") Friend request sended  
            #alert.hidden.pb-3(style="color:red") Cannot add friend  
            button.btn.btn-primary(type='submit') Submit
            